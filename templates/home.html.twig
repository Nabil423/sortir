{% extends "base.html.twig"%}

{% block title %}Sortir - Accueil {% endblock %}

{% block stylesheets %} 
    <style>
        /* Styles pour centrer le contenu */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            text-align: center;
            font-size: 24px;
        }

        /* Styles pour les liens dans le coin supérieur droit */
        .top-right-links {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        /* Styles pour votre photo */
        .my-photo {
            position: absolute;
            top: 25%;
            left: 5%;
            width: 200px; /* Taille à définir */
            border-radius: 50%; /* Pour une photo ronde */
        }

        .logo {
            position: absolute;
            top: 10px;
            left: 10px;
            width: 100px; /* Taille à définir */
        }

        /* Styles pour aligner les champs à gauche */
        .form-group {
            display: flex;
            flex-direction: row; /* Aligne les étiquettes à gauche des champs */
            align-items: center;
            margin-bottom: 10px;
        }
        .form-group label {
            width: 150px;
            text-align: right;
            padding-right: 10px;
            margin-bottom: 5px;
            margin-right: 40px;
        }
        .form-group input,
        .form-group select {
            width: 100%;
        }
    </style>
{% endblock %}
    


